{
	# debug
	admin off
	auto_https off
	servers {
		trusted_proxies static private_ranges
		client_ip_headers CF-Connecting-IP
		trusted_proxies_strict
	}
}

# healthchecks
:1337 {
	respond "OK" 200
}

:8888 {
	log

	reverse_proxy entra:8000
}

# prometheus metrics
:8889 {
	@prometheus {
			remote_ip 10.10.10.10
	}
	reverse_proxy @prometheus entra:8001
}